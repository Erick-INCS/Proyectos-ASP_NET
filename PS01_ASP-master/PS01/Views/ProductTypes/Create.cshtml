@model PS01.Models.ProductType

@{
    ViewBag.Title = "Crear tipo de producto";
}


<section id="contact" class="contact">
    <div class="container info">

        <div class="section-title">
            <span>@ViewBag.Title</span>
            <h2>@ViewBag.Title</h2>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class = "control-label col-md-2" >Tipo</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-outline-info" })
        </div>



    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

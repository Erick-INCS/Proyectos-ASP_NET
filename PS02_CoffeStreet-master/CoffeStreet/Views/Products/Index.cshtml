@model IEnumerable<CoffeStreet.Models.Product>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="normal-table-list">
    <div class="basic-tb-hd">
        <h2>Productos</h2>
        <p>La siguiente es una lista de los produtos disponibles en el cafe</p>
    </div>
    <div class="bsc-tbl">
        <table class="table table-sc-ex">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductType.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductType.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Products", new { id = item.Id })" class="btn btn-default btn-icon-notika waves-effect">
                                <i class="notika-icon notika-edit"></i>
                            </a>
                            <a href="@Url.Action("Details", "Products", new { id = item.Id })" class="btn btn-default btn-icon-notika waves-effect">
                                <i class="notika-icon notika-eye"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Products", new { id = item.Id })" class="btn btn-default btn-icon-notika waves-effect">
                                <i class="notika-icon notika-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

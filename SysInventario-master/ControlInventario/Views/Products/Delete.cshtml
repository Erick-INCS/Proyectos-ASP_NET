@model ControlInventario.Models.Product

@{
    ViewBag.Title = "Eliminar producto";
}

    <div class="masthead">
        <div class="masthead-content space">

            <div class="container">

                @*<h2>Delete</h2>*@

                <h3>¿Está seguro que desea eliminar este producto?</h3>
                <div>
                    @*<h4>Product</h4>*@
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @*@Html.DisplayNameFor(model => model.Supplier.SupplierCode)*@ Código del proveedor
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Supplier.SupplierCode)
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.ProductCode)*@ Código del producto
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProductCode)
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.ProductName)*@ Nombre del producto
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.Description)*@ Descripción
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.Quantity)*@ Cantidad
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <dt>
                            @*@Html.DisplayNameFor(model => model.Price)*@ Precio
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                    </dl>

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> <br />
                            @Html.ActionLink("Regresar a la lista", "Index")
                        </div>
                    }
                </div>
            
            </div>
        </div>
    </div>


@model IEnumerable<ControlInventario.Models.Product>

@{
    ViewBag.Title = "Productos";
}

    <div class="masthead">
        <div class="masthead-content space">

            <div class="container">
                <h2>@ViewBag.Title</h2>

                <p>
                    @Html.ActionLink("Crear uno nuevo", "Create", null, new { @class="btn btn-outline-success" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Supplier.SupplierCode)*@ Código del proveedor
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.ProductCode)*@ Código del producto
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.ProductName)*@ Productio
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Description)*@ Descripción
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Quantity)*@ Cantidad
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Price)*@ Precio
                        </th>
                        <th></th>
                    </tr>

               @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier.SupplierCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                             @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) &nbsp;
                             @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) &nbsp;
                             @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

                            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                        </td>
                    </tr>
                }
                </table>

            </div>

        </div>
    </div>

